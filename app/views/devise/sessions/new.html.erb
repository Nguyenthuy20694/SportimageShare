<div class="container" style="margin-top: 100px">
    <h1 align="center">Log in</h1>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control form-margin', autofocus: true %>

                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control form-margin', autocomplete: "off" %>

                    <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me, class: 'form-margin' %>
                        <%= f.label :remember_me, class: 'form-margin' %>
                    <% end -%>

                <%= f.submit "Log me in", class: "btn btn-lg btn-primary btn-block form-margin" %>
            <% end %>

            <p>New user? <%= render "devise/shared/links" %></p>
        </div>
    </div>
</div>