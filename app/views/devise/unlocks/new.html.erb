<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control form-margin' autofocus: true %>

    <%= f.submit "Resend unlock instructions", class: "btn btn-lg btn-primary btn-block form-margin" %>
<% end %>

<%= render "devise/shared/links" %>
