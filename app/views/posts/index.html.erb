<div class="center">
<% @posts.each do |post| %>
    <div class="thumbnail">
    	<h4><b><%= post.user.user_name %></b></h4>
    	<%= time_ago_in_words post.created_at %>
        <hr>
        <div class="caption"><%=post.caption %></div>
    	<%=link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
    </div>
<%end%>
</div>